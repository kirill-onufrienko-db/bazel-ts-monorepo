{
    "compilerOptions": {
        "baseUrl": "./",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist",
        "target": "esnext",
        // https://github.com/microsoft/TypeScript/issues/26859
        "module": "esnext",
        "paths": {
            "test_bazel_build/*": ["*"]
        }
    },
    "exclude": [
        "node_modules",
        "bazel-out",
        "dist",
        "**/*.spec.ts"
    ],
    // https://github.com/bazelbuild/rules_typescript/blob/master/internal/tsc_wrapped/tsconfig.ts
    "bazelOptions": {
        "workspaceName": "test_bazel_build"
    }
}
